<p id="notice"><%= notice %></p>

<h1>Listing Calendar Events</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Start time</th>
      <th>End time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @calendar_events.each do |calendar_event| %>
      <tr>
        <td><%= calendar_event.name %></td>
        <td><%= calendar_event.start_time %></td>
        <td><%= calendar_event.end_time %></td>
        <td><%= link_to 'Show', calendar_event %></td>
        <td><%= link_to 'Edit', edit_calendar_event_path(calendar_event) %></td>
        <td><%= link_to 'Destroy', calendar_event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Calendar event', new_calendar_event_path %>

<%= month_calendar events: @calendar_events do |date, meetings| %>
    <%= date %>

    <% meetings.each do |meeting| %>
        <div>
          <%= meeting.name %>
        </div>
    <% end %>
<% end %>